\newtcbtheorem[number within=section]{theorem}{定理}%
{colback=white, colframe=black, colbacktitle=red!30!black, coltitle=white,
fonttitle=\bfseries, separator sign dash}{theo}
% ---- ---- The Lemma Box ---- ---- %
\newtcbtheorem[number within=section]{lemma}{補題}%
{colback=white, colframe=black, colbacktitle=green!30!black, coltitle=white,
fonttitle=\bfseries, separator sign dash}{lemm}
